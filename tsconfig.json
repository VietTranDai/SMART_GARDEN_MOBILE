// tsconfig.json
{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true, // bật toàn bộ strict checks
    "esModuleInterop": true, // cho phép import CommonJS modules
    "jsx": "react-native", // bắt buộc để TS parse .tsx trong RN/Expo
    "allowJs": true, // nhập cả file .js nếu có
    "moduleResolution": "node",
    "resolveJsonModule": true, // cho phép import .json
    "skipLibCheck": true, // bỏ qua kiểm tra types trong node_modules
    "noEmit": true, // không sinh file .js đầu ra
    "baseUrl": ".", // để paths hoạt động
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts", "env.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
